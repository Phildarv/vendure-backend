{
  "name": "vendure-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "run:server": "ts-node ./src/index.ts",
    "run:worker": "ts-node ./src/index-worker.ts",
    "start": "concurrently yarn:run:*",
    "build-migrations": "tsc -p tsconfig.migrations.json",
    "build": "rimraf dist/migrations && rimraf dist/src && tsc && yarn compile-admin-ui",
    "migration:generate": "ts-node migration generate",
    "migration:run": "ts-node migration run",
    "migration:revert": "ts-node migration revert",
    "update-vendure": "yarn add @vendure/admin-ui-plugin @vendure/asset-server-plugin @vendure/core @vendure/email-plugin @vendure/ui-devkit",
    "compile-admin-ui": "rimraf dist/admin-ui && ts-node src/compile-admin-ui.ts",
    "test": "echo 'sometime in the future'",
    "deploy": "yarn build && cp -r dist/migrations/*.js migrations/ && rm migrations/*.ts"
  },
  "dependencies": {
    "@types/prosemirror-menu": "^1.0.2",
    "@types/prosemirror-model": "^1.7.2",
    "@types/prosemirror-state": "^1.2.5",
    "@vendure/admin-ui": "^0.15.1",
    "@vendure/admin-ui-plugin": "^0.15.1",
    "@vendure/asset-server-plugin": "^0.15.1",
    "@vendure/core": "^0.15.1",
    "@vendure/elasticsearch-plugin": "^0.13.0",
    "@vendure/email-plugin": "^0.15.1",
    "@vendure/ui-devkit": "^0.15.1",
    "mysql": "2.18.1",
    "rimraf": "^3.0.2",
    "typescript": "3.8.3",
    "vendure-bulk-discounts": "^0.1.11",
    "vendure-product-recommendations": "^0.1.16"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1000.0",
    "concurrently": "^5.3.0",
    "ts-node": "8.8.2"
  }
}
