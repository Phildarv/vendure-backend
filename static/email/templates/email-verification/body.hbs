{{> header title="Verify Your Email Address" }}

<mj-section background-color="white">
    <mj-column>
        <mj-text font-family="'Roboto Condensed', sans-serif" line-height="1.5" font-weight="300">
            Thank you for creating an account. Click the button below to verify this email address and
            complete the registration process:
        </mj-text>

        <mj-button font-family="'Roboto Condensed', sans-serif" background-color="#353535" color="white"
            href="{{ verifyEmailAddressUrl }}?token={{ verificationToken }}">
            Verify email
        </mj-button>
    </mj-column>
</mj-section>


{{> footer }}